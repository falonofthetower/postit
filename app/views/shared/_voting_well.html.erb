<% if logged_in? && current_user.already_voted?(object) %>
  <%= link_to path_to_vote(object, true), method: 'post', remote: true do %>
    <i class='icon-arrow-up'></i>
  <% end %>
  <br />
<% end %>
<span><%= object.total_votes %> votes</span>
<br />
<% if logged_in? && current_user.already_voted?(object) %>
  <%= link_to path_to_vote(object, false), method: 'post', remote: true do %>
    <i class='icon-arrow-down'></i>
  <% end %>
<% end %>
