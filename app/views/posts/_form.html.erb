<div class="control-group">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>

<div class="control-group">
  <%= f.label :url %>
  <%= f.text_field :url %>
</div>

<div class="control-group">
  <%= f.label :description %><br>
  <%= f.text_area :description, rows: 5 %>
</div>


<div class="control-group">
  binding.pry
  <%= @categories.each do |category| %>
    <%= f.label category.name %>
    <%= check_box_tag "category[category_ids][]", category.id, @post.categories.include?(category) %>
  <% end %>
</div>

<div class="control-group">
  <%= f.submit 'Create Post', class: 'btn btn-primary' %>
</div>
